<style> 
		#wrapper { 
		position: absolute; left: 50%; top: 50%; perspective: 1500px; 
		} 
		.box-area { 
		top: 250px;
		position: relative; 
		transform-style: preserve-3d; animation-name: rotate; 
		animation-duration: 5s; 
		animation-timing-function: linear; 
		animation-iteration-count: infinite; 
		} 
		@@keyframes rotate { 
		0% { transform: rotate3d(0, 0, 0, 0); } 
		100% { transform: rotate3d(0, 1, 0, 360deg); }
		} 
		.box { 
		position: absolute; 
		width: 50px; height: 50px; 
		border: 5px solid #262626; 
		} 
		#box-front { 
		transform: translateX(-25px) translateY(-25px) translateZ(25px); 
		background: rgba(89, 74, 226, 0.5);
		} 
		#box-back { 
		transform: translateX(-25px) translateY(-25px) translateZ(-25px); 
		background: rgba(89, 74, 226, 0.5); 
		} 
		#box-right { 
		transform: translateY(-25px) rotateY(90deg); 
		background: rgba(89, 74, 226, 0.5);
		} 
		#box-left { 
		transform: translateY(-25px) translateX(-50px) rotateY(90deg); 
		background: rgba(89, 74, 226, 0.5); 
		} 
		#box-top { transform: translateX(-25px) translateY(-50px) rotateX(90deg); 
		background: rgba(89, 74, 226, 0.5);
		} 
		#box-bottom { 
		transform: translateX(-25px) rotateX(90deg); 
		background: rgba(89, 74, 226, 0.5);
		} 
		.box-area { 
		transform: rotateX(90deg) rotateY(90deg); 
		} 
	</style>

<body>
<div id="wrapper">
	<div class="box-area">
		<div id="box-front" class="box"></div>
		<div id="box-right" class="box"></div>
		<div id="box-back" class="box"></div>
		<div id="box-left" class="box"></div>
		<div id="box-top" class="box"></div>
		<div id="box-bottom" class="box"></div>
	</div>
</div>
</body>